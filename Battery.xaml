<UserControl x:Class="PlayniteGameOverlay.Battery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayniteGameOverlay"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="128
             ">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="44" Margin="118,0,0,0" Fill="White" VerticalAlignment="Center" Width="10"/>
        <Rectangle Width="120" Height="64" Stroke="White" Margin="0,0,8,0" StrokeThickness="4"/>
        <Rectangle x:Name="BatteryBar"  HorizontalAlignment="Left" Height="56" Margin="4,0,0,0" Fill="#FF48AF30" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
